{
    // Editor settings
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "selection",
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Victor Mono SemiBold', 'Operator Mono Lig', 'Font Awesome 5 Brands', 'Font Awesome 5 Free', 'Font Awesome 5 Free Solid'",
    "editor.fontSize": 20,
    "editor.formatOnType": false,
    // Extension settings
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/"
        }
    ],
    "liveSassCompile.settings.generateMap": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveshare.featureSet": "insiders",
    "liveshare.nameTagVisibility": "Never",
    "prettier.singleQuote": true,
    "prettier.jsxSingleQuote": false,
    "prettier.arrowParens": "always",
    "prettier.trailingComma": "all",
    "prettier.jsxBracketSameLine": false,
    "python.formatting.blackArgs": [
        "-l",
        "79"
    ],
    "remote.SSH.showLoginTerminal": true,
    "vsicons.dontShowNewVersionMessage": true,
    "walTheme.autoUpdate": true,
    // File settings
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    // git settings
    "git.ignoreLegacyWarning": true,
    "git.ignoreMissingGitWarning": true,
    // Window settings
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": -1.2,
    "workbench.colorTheme": "Wal Bordered",
    // Language-specific settings
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 100, SortIncludes: true}",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "python.formatting.provider": "black",
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Terminal settings
    "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
    "terminal.integrated.env.linux": {
        "VSC": "true"
    },
    "terminal.integrated.env.windows": {
        "VSC": "true"
    },
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "'Fira Code', monospace",
    "terminal.integrated.rendererType": "dom",
    // Zen mode settings
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "editor.mouseWheelZoom": true,
    "liveshare.presence": true,
}