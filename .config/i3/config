# bindsym XF86WakeUp
# bindsym XF86Explorer
# bindsym XF86Send
# bindsym XF86Xfer
bindsym XF86WWW exec $browser
# bindsym XF86DOS
bindsym XF86ScreenSaver exec --no-startup-id lockscreen
