# Lockscreen shortcut
bindsym $mod+l exec --no-startup-id lockscreen

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%

# Toggle mute key led
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && light -s sysfs/leds/platform::mute | grep -q 100.0 && light -s sysfs/leds/platform::mute -U 100 || light -s sysfs/leds/platform::mute -A 100

# Sreen brightness controls
## light
# Need to add your user to the 'video' group
# sudo usermod -a -G video $USER
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Toggle wifi
bindsym XF86WLAN exec nmcli radio wifi | grep -iq 'disabled' && nmcli radio wifi on || nmcli radio wifi off

# Bind windows key to capslock
exec setxkbmap -option caps:super

# Invert scrolling
exec --no-startup-id invert_scroll

# Disable touchpad on external mouse plug in
exec --no-startup-id autodisable_touchpad

exec_always --no-startup-id wallpaper ~/papes

exec_always --no-startup-id launch_polybar >> /tmp/polystartup.log 2>&1

exec --no-startup-id compton -f -D 5 -c -l -3 -t -3 -r 4

exec_always --no-startup-id launch_dunst >> /tmp/dunst.log 2>&1

